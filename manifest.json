{
  "manifest_version": 3,
  "name": "Plain Text Snapshot",
  "description": "Extracts the active page's visible text and generates AI-powered summaries with persistent session storage.",
  "version": "2.0.4",
  "action": {
    "default_title": "Plain Text Snapshot",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "bento.html",
        "bento.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
