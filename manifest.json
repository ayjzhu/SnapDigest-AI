{
  "manifest_version": 3,
  "name": "Plain Text Snapshot",
  "description": "Extracts the active page's visible text and generates AI-powered summaries with persistent session storage.",
  "version": "1.1.1",
  "action": {
    "default_title": "Plain Text Snapshot",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "bento.html",
        "bento.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
